{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["@emotion/react/types/css-prop", "@types/node"],
    "typeRoots": ["./node_module/@types", "types"],
    "baseUrl": ".",
    "paths": {
      "~api/*": ["src/api/*"],
      "~components/*": ["src/components/*"],
      "~hooks/*": ["src/hooks/*"],
      "~pages/*": ["src/pages/*"],
      "~styles/*": ["src/styles/*"],
      "~types/*": ["src/types/*"],
      "~utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"]
}
